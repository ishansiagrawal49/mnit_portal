  <body>

    <div class="container">
    <div class="row">
        <h1 style="text-align:center;">Complain Form</h1>
        <div style="width:30%; margin:30px auto;">
            <form action="/complaint" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="Title" name="title">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="Type" name="type">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="Image Link (Optional)" name="image">
                </div>
                
                <div class="form-group">
                    <textarea class="form-control" type="text" placeholder="Content" name="content"></textarea>
                </div>
                <div class="form-group">
                       <button class="btn btn-primary btn-lg btn-block">POST</button>
                </div>

            </form>
            <a href="/home/student/123">Back</a>
        </div>
    </div>
    </div>

  </body>
